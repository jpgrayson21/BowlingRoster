@{
}

@model List<Team>

<br />
<h4 class="text-center">Team Filter</h4>
<br />

@*To show filters*@
<div class="d-grid gap-2">
    @foreach (Team t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-id="@t.TeamID"
           class="btn btn-block @(ViewBag.Selected == t.TeamName ? "btn-primary" : "btn-outline-primary")">@t.TeamName</a>
    }

    <br />
    <a asp-controller="Home" asp-action="Index" asp-route-id="0"
       class="btn btn-block btn-outline-danger">Clear Filters</a>
</div>