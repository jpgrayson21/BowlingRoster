@{
    ViewData["Title"] = "Bowler Form";
}

@model Bowler

<h1>Add a New Bowler</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="BowlerFirstName">First Name:</label><input asp-for="BowlerFirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BowlerMiddleInit">Middle Initial:</label><input asp-for="BowlerMiddleInit" class="form-control" maxlength="1" />
    </div>
    <div class="form-group">
        <label asp-for="BowlerLastName">Last Name:</label><input asp-for="BowlerLastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BowlerAddress">Address:</label><input asp-for="BowlerAddress" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BowlerCity">City:</label><input asp-for="BowlerCity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BowlerState">State Abbreviation:</label><input asp-for="BowlerState" class="form-control" maxlength="2" />
    </div>
    <div class="form-group">
        <label asp-for="BowlerZip">Zip:</label><input asp-for="BowlerZip" class="form-control" maxlength="5" />
    </div>
    <div class="form-group">
        <label asp-for="BowlerPhoneNumber">Phone Number:</label><input asp-for="BowlerPhoneNumber" class="form-control" />
    </div>

    @*Print Team Names*@
    <div class="form-group">
        <label asp-for="TeamID">Team:</label>
        <select asp-for="TeamID">
            @foreach (Team t in ViewBag.Teams)
            {
                <option value="@t.TeamID">@t.TeamName</option>
            }
        </select>
    </div>

    <input type="hidden" asp-for="BowlerID" />

    <div class="float-right">
        <button class="btn btn-primary" type="submit">Save Bowler</button>
    </div>

    <br />
</form>