@{
    ViewData["Title"] = "Bowling Roster";
}

@model List<Bowler>

<div class="row my-3">
    <h2 class="text-center btn-block">@ViewBag.Selected</h2>
</div>
<div class="row">

    @*Filters*@
    <div class="col-2">
        <vc:team></vc:team>
    </div>

    @*Bowler Information Table*@
    <div class="col">
        <table class="table table-sm table-striped table-hover">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>City</th>
                    <th class="text-center">State</th>
                    <th class="text-center">Zip</th>
                    <th class="text-center">Phone</th>

                    <th class="align-middle text-center">Edit</th>
                    <th class="align-middle text-center">Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (Bowler b in Model)
                {
                    <tr>
                        <td class="align-middle">@b.BowlerFirstName @b.BowlerMiddleInit</td>
                        <td class="align-middle">@b.BowlerLastName</td>
                        <td class="align-middle">@b.BowlerAddress</td>
                        <td class="align-middle">@b.BowlerCity</td>
                        <td class="align-middle text-center">@b.BowlerState</td>
                        <td class="align-middle text-center">@b.BowlerZip</td>
                        <td class="align-middle text-center">@b.BowlerPhoneNumber</td>

                        <td class="align-middle text-center">
                            <a class="btn btn-secondary btn-sm" asp-action="EditBowler" asp-controller="Home" asp-route-id="@b.BowlerID">Edit</a>
                        </td>
                        <td class="align-middle text-center">
                            <a class="btn btn-danger text-white btn-sm" asp-action="DeleteBowler" asp-controller="Home" asp-route-id="@b.BowlerID">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>